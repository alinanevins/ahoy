<div class="container">
  <h1>All Consultations</h1>

  <table>
    <thead>
      <th>Consultation ID</th>
      <th>Faculty Member</th>
      <th>Consultant Name</th>
      <th>Date</th>
      <th>Focus</th>
      <th>Link to Notes</th>
      <th>Date Added</th>
    </thead>
    <% @consultation.each do |a| %>
    <tr>

      <td><%= link_to a.id, "/consultations/#{a.id}", method: 'get' %></td>
      <td><%= a.facultyname  %></td>
      <td><% @userid = @consultation.user_id %>
      <% a = User.find(@userid) %>
      <%= a.first_name.to_s + " " + a.last_name.to_s %></td>
      <td><% if a.date==nil %>
        <%=  a.date %>
      <% else %>
        <%= a.date.to_s(:pretty_dt) %>
      <% end %></td>
      <td><%= a.focus  %></td>
      <td><%= a.link_to_notes %></td>
      <td><%= a.created_at.to_s(:pretty_dt) %></td>
    </tr>
    <% end %>
  </table>
</div>
