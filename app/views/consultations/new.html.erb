<div class="container">
  <h1>Add a New Consultation</h1>

  <%= form_for(@consultation) do |f| %>

  <div class="row">
    <div class="six columns">
      <%= f.label :date %>
      <%= f.datetime_local_field :date, class: "u-full-width", required: true %><p/>
    </div>
    <div class="six columns">
      <%= f.label :facultyname, "Faculty Name", id: "faculty" %>
      <%= f.text_field :facultyname, class: "u-full-width", id: "faculty"%><p/>
    </div>
  </div>
  <div class="row">
    <%= f.label :focus %>
    <%= f.text_area :focus, class: "u-full-width" %><p/>
  </div>
  <div class="row">
    <%= f.label :link_to_notes %>
    <%= f.url_field :link_to_notes, class: "u-full-width", value: "http://" %><p/>
  </div>
  <div class="row">
    <%= f.submit class: "button-primary" %>
    <% end %>
  </div>
</div>
