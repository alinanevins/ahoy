<div class="container">
  <h1>Add a New Consultation</h1>

  <%= form_for(@consultation) do |f| %>

  <div class="row">
    <div class="six columns">
      <%= f.label :date %>
      <%= f.datetime_local_field :date, class: "u-full-width", required: true %><p/>
    </div>
    <div class="six columns">
      <%= f.label :clientname, "Client Name", id: "client" %>
      <%= f.text_field :clientname, class: "u-full-width client"%><p/>
    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <%= f.label :user_id, "Consultant(s)" %><p/>
      <%= f.collection_select :user_id, User.order('first_name ASC').all, :id, :full_name, { :selected => @current_user_id }, { :multiple => true, :prompt => true, :class => "u-full-width" } %>
    </div>
    <div class="six columns">
      <%= f.label :focus, "Primary Focus" %>
      <%= f.text_area :focus, class: "u-full-width" %><p/>
    </div>
  </div>
  <div class="row">
    <%= f.label :link_to_notes %>
    <%= f.url_field :link_to_notes, class: "u-full-width", value: "http://" %><p/>
  </div>
  <div class="row">
    <%= f.submit class: "button-primary" %>
    <% end %>
  </div>
</div>
