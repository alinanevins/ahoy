<div class="container">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "u-full-width" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
    <div class="six columns">
      <%= f.label :password, "New Password" %> <i></br>(leave blank to keep your old password)</i>
      <%= f.password_field :password, autocomplete: "off", class: "u-full-width" %>
    </div>
    <div class="six columns">
      <%= f.label :password_confirmation, "New Password Confirmation" %><i></br>(leave blank to keep your old password)</i>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "u-full-width" %>
    </div>
  </div>
  <div class="row">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "u-full-width" %>
  </div></p>

  <div class="row">
    <%= f.submit "Update", class: "button-primary" %>
  </div>
  <% end %>

  <h3>Delete my account</h3>

  <p><%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
