<div class="container">
  <h1>Edit your Observation</h1>

    <div class="row">
      <%= form_for(@observation) do |f| %>

      <%= f.label :date %>
      <%= f.text_field :date %><p/>

      <%= f.label :school %>
      <%= f.text_field :school %><p/>

      <%= f.label :department %>
      <%= f.text_field :department %><p/>

      <%= f.label :presentation_id %>
      <%= f.text_field :presentation_id %><p/>

      <%= f.label :user_id %>
      <%= f.text_field :user_id %><p/>

      <%= f.submit %>
      <% end %>
    </div>

    <div class="row">
      <%= link_to "Delete this observation", observation_path(@observation.id), method: 'delete' %>
    </div>
    
  </div>
