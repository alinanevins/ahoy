<div class="container">

    <h1>Presentation <%= @presentation.id %></h1>

  <p>Date: <% if @presentation.date==nil %>
    <%=  @presentation.date %>
  <% else %>
    <%= @presentation.date.to_s(:pretty_dt) %>
  <% end %></p>
  <p>School: <%= @presentation.school %></p>
  <p>Department: <%= @presentation.department %></p>

  <p>Presenter: <%= link_to @presenter_name, "/users/#{@presentation.user_id}" %></p>
  <p>Presenter's Notes: <%= @presentation.notes %></p>
  <p>Observation ID: <%= link_to @observation_id, "/observations/#{@observation_id}" %></p>
  <p>Observer: <%= link_to @observer_name, "/users/#{@observer_id}" %></p>
  <p>Observer's Notes: <%= @observation_notes %></p>

  <p>Date Added: <%= @presentation.created_at.to_s(:pretty_dt) %></p>

  <p><%= button_to "Edit", "/presentations/#{@presentation.id}/edit", method: 'post', class: "button-primary" %></p>
</div>
