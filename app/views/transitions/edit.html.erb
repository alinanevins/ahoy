<div class="container">
  <h1>Edit your Classes*v2 to Canvas Transition</h1>

  <%= form_for(@transition) do |f| %>

  <div class="row">
    <div class="six columns">
      <%= f.label :facultyname, "Faculty Name", id: "faculty" %>
      <%= f.text_field :facultyname, class: "u-full-width faculty"%><p/>
    </div>
    <div class="six columns">
      <%= f.label :course %>
      <%= f.text_field :course, class: "u-full-width" %><p/>
    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <%= f.label :date, required: true %>
      <%= f.datetime_local_field :date, class: "u-full-width" %><p/>
    </div>
    <div class="six columns">
      <%= f.label :link %>
      <%= f.url_field :link, class: "u-full-width" %><p/>
    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <%= f.label :user_id, "Team Member ID" %>
      <%= f.text_field :user_id, class: "u-full-width" %><p/>
    </div>
    <div class="six columns">

    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <%= f.submit class: "button-primary"%>
    </div>
    <div class="six columns">
      <%= link_to "Delete this transition", transition_path(@transition.id), method: 'delete' %>
    </div>
  </div>
  <% end %>
</div>
