<div class="container">
  <h1>New Classes*v2 to Canvas Transition</h1>

  <%= form_for(@transition) do |f| %>

  <div class="row">
    <div class="six columns">
      <%= f.label :facultyname, "Faculty Name", id: "faculty" %>
      <%= f.text_field :facultyname, class: "u-full-width", id: "faculty"%><p/>
    </div>
    <div class="six columns">
      <%= f.label :course %>
      <%= f.text_field :course, class: "u-full-width" %><p/>
    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <%= f.label :date, required: true %>
      <%= f.datetime_local_field :date, class: "u-full-width" %><p/>
    </div>
    <div class="six columns">
      <%= f.label :link, "Link to Canvas Course" %>
      <%= f.url_field :link, class: "u-full-width", value: "https://yale.instructure.com/courses/" %><p/>
    </div>
  </div>
  <div class="row">
    <%= f.submit class: "button-primary" %>
  </div>
  <% end %>
</div>
