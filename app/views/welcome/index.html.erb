<body class="index">


  <!-- Home -->
  <section id="templatemo_home">
    <div class="container home_page home">
      <div class="templatemo_home_inner_wapper">
        <h1 class="text-center"><i class="fa fa-anchor"></i> AHOY!</h1>
      </div>
      <div class="templatemo_home_inner_wapper">
        <h2 class="text-center">All Aboard Canvas</h2>
        <p class="text-center">
          Making an LMS transition more fun!
        </p>
      </div>
      <div class="templatemo_home_inner_wapper btn_wapper">
        <div class="col-sm-4">
          <a href="#templatemo_features" class="btn col-xs-12 scroll_effect shadow-top-down">
            <i class="fa fa-ship"></i> Features
          </a>
        </div>
        <div class="col-sm-4">
          <% if current_user == nil %>
            <a href="#templatemo_download" class="btn col-xs-12 scroll_effect shadow-top-down" action= users_registration_path>
              <i class="fa fa-user"></i> Log In</a>
          <% else %>
            <a href="/users/<%= current_user.id %>" class="btn col-xs-12 shadow-top-down scroll_effect"><i class="fa fa-user"></i> My Profile</a>
            <%  %>
          <% end %>
        </div>
        <div class="col-sm-4">
          <a href="/badges/all" class="btn col-xs-12 shadow-top-down" >
            <i class="fa fa-trophy"></i> All Badges
          </a>
        </div>
      </div>
    </div>
  </section>
  <!-- Features -->
  <section id="templatemo_features">
    <div class="container-fluid">
      <header class="template_header">
        <h1 class="text-center"><span>...</span> Features <span>...</span></h1>
      </header>
      <div class="col-sm-12">
        <div class="col-sm-6 col-lg-3 feature-box">
          <div class="feature-box-inner">
            <div class="feature-box-icon">
              <i class="fa fa-certificate
"></i>
            </div>
            <p>
              Achieve recognition for small and large milestones
            </p>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3 feature-box">
          <div class="feature-box-inner">
            <div class="feature-box-icon">
              <i class="fa fa-trophy"></i>
            </div>
            <p>
              Compete with colleagues for top honors
            </p>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3 feature-box">
          <div class="feature-box-inner">
            <div class="feature-box-icon">
              <i class="fa fa-thumbs-o-up"></i>
            </div>
            <p>
              Cheer on your colleagues for their hard work
            </p>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3 feature-box">
          <div class="feature-box-inner">
            <div class="feature-box-icon">
              <i class="fa fa-line-chart"></i>
            </div>
            <p>
              View all the Canvas @ Yale Transition work and progress in one place
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Log in -->
  <section id="templatemo_download">
    <div class="container">
      <div class="templatemo_download_text_wapper home">
        <div class="row">
          <div class="col-sm-12">
            <header class="template_header">
              <h1 class="text-center"><span>...</span> Log In <span>...</span></h1>
            </header>

          </p>
        </div>
      </div>
      <form role="form" action= '/users/sign_in' method="post" id="new_user">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-user"></i></div>
            <input value="" name="user[email]" id="user_email" type="email" class="form-control user-login" placeholder="Email"></input>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-unlock-alt"></i></div>
            <input autocomplete="false" name="user[password]" id="user_password" type="password" class="form-control" placeholder="Password"></input>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-6 col-xs-offset-6">
            <button type="submit" class="form-control">Log In</button>
          </div>
        </div>
      </form>
    </div>

    <div class="col-xs-12">
      &nbsp;
    </div>

  </section>
  <!-- Sign up -->
  <section id="templatemo_contact">
    <div class="container home">
      <div class="row">
        <div class="col-sm-12">
          <header class="template_header">
            <h1 class="text-center"><span>...</span> Sign Up <span>...</span></h1>
          </header>

        </p>
      </div>
    </div>
    <form role="form" action="/users" method="post" id="new_user">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-user"></i></div>
          <input value="" name="user[first_name]" id="user_first_name" type="text" class="form-control user-login" placeholder="First Name">
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-user"></i></div>
          <input value="" name="user[last_name]" id="user_last_name" type="text" class="form-control user-login" placeholder="Last Name">
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-user"></i></div>
          <input value="" name="user[email]" id="user_email" type="email" class="form-control user-login" placeholder="Email">
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-unlock-alt"></i></div>
          <input autocomplete="off" name="user[password]" id="user_password" type="password" class="form-control user-login" placeholder="Password"></input>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-unlock-alt"></i></div>
          <input autocomplete="off" name="user[password_confirmation]" id="user_password_confirmation" type="password" class="form-control user-login" placeholder="Confirm Password">
        </div>
      </div>

      <div class="form-group row">
        <div class="col-xs-6 col-xs-offset-6">
          <button type="submit" class="form-control">Sign Up</button>
        </div>
      </div>
    </form>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ul class="nav nav-pills social">
          <li><a href="#" class="shadow-top-down social-facebook"><i class="fa fa-facebook-official"></i></a></li>
          <li><a href="#" class="shadow-top-down social-twitter"><i class="fa fa-twitter-square"></i></a></li>
          <li><a href="#" class="shadow-top-down social-youtube"><i class="fa fa-youtube-square"></i></a></li>
          <li><a href="#" class="shadow-top-down social-instagram"><i class="fa fa-instagram"></i></a></li>
        </ul>
      </div>
    </div>

  </section>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 footer-copyright">
          <p>Copyright &copy; 2016 <a href="#" target="_parent">Alina Nevins and Niels Gribskov</a></p>
        </div>
      </div>
    </div>
  </footer>
</body>
